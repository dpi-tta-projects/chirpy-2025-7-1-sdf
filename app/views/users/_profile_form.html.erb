<%= form_with model: user do |form| %>

  <% if user.errors.any? %>
    <% user.errors.each do |error| %>
      <p class="text-danger"><%= error.full_message %></p>
    <% end %>
  <% end %>

  <div class="mb-2">
    <%= form.label :username, class: "form-label" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>
  <div class="mb-2">
    <%= form.label :display_name, class: "form-label" %>
    <%= form.text_field :display_name, class: "form-control" %>
  </div>
  <div class="mb-2">
    <%= form.label :bio, class: "form-label" %>
    <%= form.textarea :bio, class: "form-control" %>
  </div>
  <div class="mb-2">
    <%= form.label :location, class: "form-label" %>
    <%= form.text_field :location, class: "form-control" %>
  </div>

  <div class="d-flex justify-content-end">
    <%= form.submit class: "btn btn-primary rounded-pill" %>
  </div>
<% end %>
