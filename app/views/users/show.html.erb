<div class="container-fluid">
  <%# TODO: replace with username %>
  <% content_for :title, @user.email_address %>


  <div class="row">
    <div class="col-2 col-lg-1 p-0">
      <%= render "shared/sidebar" %>
    </div>
    <div class="col-8 col-lg-10 p-0">
      <%# TODO: maybe put this in a partial users/_card.html.erb %>
      <div class="card">
        <div class="card-header">
          <%# TODO: replace with username %>
          <h1><%= @user.email_address %></h1>
          <%# TODO: add chirp count %>
          <p>0 Chirps</p>
        </div>
        <img src="https://picsum.photos/seed/<%= @user.email_address %>/1200/400" class="img-fluid" alt="banner image">

        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <h5 class="card-title"><%= @user.email_address %></h5>

            <%= link_to 'Edit Profile', edit_user_path(Current.user.id), class: "btn btn-outline-primary rounded-pill" %>
          </div>
          <p class="card-text">Joined <%= @user.created_at.strftime("%B %Y") %></p>
        </div>
      </div>
    </div>
    <div class="col-2 col-lg-1 p-0">
      <%# TODO: right sidebar%>
    </div>
  </div>
