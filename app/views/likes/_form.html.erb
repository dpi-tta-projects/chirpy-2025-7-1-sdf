
<%= form_with model: like, local: false, id: dom_id(like, dom_id(like.chirp)) do |form| %>
  <%= form.hidden_field :chirp_id %>
  <div class="d-flex align-items-center">
    <%= form.button class: "btn btn-link p-0", title: "Like", aria: { label: "#{like.chirp.likes_count} Likes. Like" } do %>
      <i class="fa-regular fa-heart text-danger"></i>
    <% end %>
    <%= like.chirp.likes_count if like.chirp.likes_count.positive? %>
  </div>
<% end %>
