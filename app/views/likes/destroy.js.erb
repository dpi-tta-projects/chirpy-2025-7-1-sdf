// Wrap in function
// Each time your .js.erb runs (e.g., after liking or unliking), it gets a fresh scope.
// Can use `let` or `const` safely.
// No global variables pollute the window scope.
// No "already declared" errors when the same script runs again.

function destroy() {
  // find destroy form
  var existingForm = $("#<%= dom_id(@like, dom_id(@like.chirp)) %>")

  // render new like form]
  var newForm = "<%= j(render('likes/like', chirp: @like.chirp)) %>"

  // replace existing destroy form with new form
  existingForm.replaceWith(newForm)

  $("#<%= dom_id(Like, dom_id(@like.chirp)) %>").addClass("bounce-animation")
}

destroy();
