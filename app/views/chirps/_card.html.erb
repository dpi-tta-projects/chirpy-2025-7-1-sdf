<div id="<%= dom_id chirp %>" class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="https://picsum.photos/seed/<%= chirp.user.email_address %>/600/400" class="img-fluid rounded-start" alt="avatar image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= chirp.user.email_address %></h5>
        <p class="card-text"><%= chirp.body %></p>
        <p class="card-text">
          <small class="text-body-secondary">
            <%= time_ago_in_words(chirp.created_at) %> ago
          </small>
        </p>
      </div>
    </div>
  </div>
</div>
