<div class="container">
  <p style="color: green"><%= notice %></p>

  <% content_for :title, "Chirps" %>

  <h1 class="visually-hidden">Chirps</h1>

  <div class="row">
    <div class="col-2">
      <%= render "shared/sidebar" %>
    </div>
    <div class="col-10">
      <div class="border p-3">
        <%= render("form", chirp: Chirp.new) %>
      </div>

      <div id="chirps" class="border p-3">
        <% @chirps.each do |chirp| %>
          <%= render("card", chirp: chirp) %>
        <% end %>
      </div>
    </div>
  </div>

  

</div>
